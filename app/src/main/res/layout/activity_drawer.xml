<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.a_karpenko.smack.ui.MainActivity">

        <android.support.design.widget.AppBarLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"/>

        </android.support.design.widget.AppBarLayout>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/mainConstraint"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.example.a_karpenko.smack.ui.MainActivity">

            <TextView
                    android:text="Your gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="@+id/myGenderList"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/myGenderList"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <android.support.constraint.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="192dp"/>

            <TextView
                    android:text="Your age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="@+id/linearLayout2"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"/>


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="8dp"
                    android:layout_marginRight="7dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/linearLayout2"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="7dp">

                <TextView
                        android:id="@+id/under18My"
                        android:text="Under 18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:background="@drawable/main_background_shape_white"
                        android:textAlignment="center"
                        android:gravity="center"
                        />

                <TextView
                        android:id="@+id/from19to22My"
                        android:text="19 - 22"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:background="@drawable/main_background_shape_white"
                        android:textColor="@color/black"
                        />

                <TextView
                        android:id="@+id/from23to26My"
                        android:text="23 - 26"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/main_background_shape_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        />

                <TextView
                        android:id="@+id/from27to35My"
                        android:text="27 - 35"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/main_background_shape_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        />

                <TextView
                        android:id="@+id/over36My"
                        android:text="36+"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/main_background_shape_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        />

            </LinearLayout>

            <TextView
                    android:text="Looking for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/myGenderList"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="@+id/linearLayout3"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="@+id/linearLayout3"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="8dp"
                    app:layout_constraintRight_toLeftOf="@+id/guideline"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/linearLayout3"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                <TextView
                        android:id="@+id/maleGenderLookingFor"
                        android:text="Male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:background="@drawable/main_background_shape_white"
                        android:textAlignment="center"
                        android:gravity="center"
                        />

                <TextView
                        android:id="@+id/femaleGenderLookingFor"
                        android:text="Female"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:background="@drawable/main_background_shape_white"
                        android:textColor="@color/black"
                        />

            </LinearLayout>

            <TextView
                    android:text="Age of"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                    android:id="@+id/textView"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="@+id/linearLayout4"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="@+id/linearLayout4"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="8dp"
                    android:layout_marginRight="7dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="@+id/guideline"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="7dp"
                    android:id="@+id/linearLayout4">

                <TextView
                        android:id="@+id/under18LookingFor"
                        android:text="Under 18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:background="@drawable/main_background_shape_white"
                        android:textAlignment="center"
                        android:gravity="center"
                        />

                <TextView
                        android:id="@+id/from19to22LookingFor"
                        android:text="19 - 22"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:background="@drawable/main_background_shape_white"
                        android:textColor="@color/black"/>

                <TextView
                        android:id="@+id/from23to26LookingFor"
                        android:text="23 - 26"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/main_background_shape_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                <TextView
                        android:id="@+id/from27to35LookingFor"
                        android:text="27 - 35"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/main_background_shape_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>

                <TextView
                        android:id="@+id/over36LookingFor"
                        android:text="36+"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/main_background_shape_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"/>
            </LinearLayout>



            <Button
                    android:id="@+id/startChat"
                    android:text="Start Chat"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="7dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    android:id="@+id/myGenderList"
                    app:layout_constraintRight_toLeftOf="@+id/guideline"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.307">

                <TextView
                        android:id="@+id/maleGenderMy"
                        android:text="Male"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_background_shape_white"
                        />

                <TextView
                        android:id="@+id/femaleGenderMy"
                        android:text="Female"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_background_shape_white"
                        />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.NavigationView
            android:id="@+id/nav_header_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="false"
            app:headerLayout="@layout/nav_header_main"
            >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="0dp"
                android:layout_marginTop="@dimen/nav_header_height">

            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/channel_list"
                    tools:layout_editor_absoluteY="25dp"
                    tools:layout_editor_absoluteX="8dp">
            </ListView>

        </RelativeLayout>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
