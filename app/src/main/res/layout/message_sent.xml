<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_gravity="bottom|end"
        android:paddingTop="2dp"
>

    <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/messageSentText"
            android:text="yo"
            android:textSize="16sp"
            android:background="@drawable/message_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30dp"
            android:textAlignment="textStart"
            android:maxWidth="220dp"
            android:padding="8dp"
            app:emojiSize="25dp"
            android:textColor="@color/black"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            android:layout_marginEnd="11dp" app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
    <TextView
            android:id="@+id/messageSentTime"
            android:text="11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/messageSentText"
            app:layout_constraintRight_toLeftOf="@+id/messageSentText"/>
    <ImageView
            android:layout_width="25dp"
            android:layout_height="13dp" app:srcCompat="@drawable/right_bubble_corner"
            android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"/>

</android.support.constraint.ConstraintLayout>
