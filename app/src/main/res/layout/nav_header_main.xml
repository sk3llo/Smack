<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/purple_green_gradient"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:gravity="bottom">

    <ImageView
            android:layout_width="67dp"
            android:layout_height="81dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/profiledefault"
            android:id="@+id/UserImageNavHeader"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="8dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/loginButtonNavHeader"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/loginButtonNavHeader"/>

    <TextView
            android:id="@+id/userNameNavHeader"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            app:layout_constraintLeft_toRightOf="@+id/UserImageNavHeader"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/UserImageNavHeader"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text=""
            android:id="@+id/userEmailNavHeader"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            app:layout_constraintLeft_toRightOf="@+id/UserImageNavHeader"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userNameNavHeader"/>

    <Button
            app:layout_editor_absoluteX="0dp"
            app:layout_editor_absoluteY="0dp"
            android:text="Log out"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/loginButtonNavHeader"
            android:background="@drawable/btn_logout_navbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:onClick="logoutButtonOnClicked"/>

    <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/channelButtonNavHeader"
            android:background="@drawable/add_channel"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userEmailNavHeader"
            android:onClick="addChannelBtnClicked"/>

</android.support.constraint.ConstraintLayout>
