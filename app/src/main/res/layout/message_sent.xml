<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:layout_editor_absoluteY="25dp"
        tools:layout_editor_absoluteX="0dp"
        android:paddingTop="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="bottom|end"
        >

        <TextView
                android:id="@+id/messageSentText"
                android:text="Hello, hello!"
                android:textSize="16sp"
                android:background="@drawable/message_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="240dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>

        <TextView
                android:id="@+id/messageSentTime"
                android:text="11:40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginRight="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/messageSentText"
                app:layout_constraintRight_toLeftOf="@+id/messageSentText"/>

    </android.support.constraint.ConstraintLayout>
