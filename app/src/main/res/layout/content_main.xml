<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context="com.example.a_karpenko.smack.MainActivity">

    <TextView
            android:text="Your gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/linearLayout"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="8dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:id="@+id/linearLayout"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <CheckedTextView
                android:id="@+id/maleOption"
                android:text="Male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/lightBlue"
                android:textAlignment="center"
                android:gravity="center"
                />

        <CheckedTextView
                android:id="@+id/femaleOption"
                android:text="Female"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@color/lightBlue"
                android:textColor="@color/black"/>

        <CheckedTextView
                android:id="@+id/willNotSayOption"
                android:text="Will not say"
                android:layout_marginTop="4dp"
                android:background="@color/lightBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/black"/>
    </LinearLayout>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="192dp"/>

    <TextView
            android:text="Your age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/linearLayout2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="8dp"
            android:background="@color/colorAccent"
            android:layout_marginRight="7dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/linearLayout2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="7dp">

        <CheckedTextView
                android:id="@+id/lessThan14"
                android:text="Under 18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/lightBlue"
                android:textAlignment="center"
                android:gravity="center"
                />

        <CheckedTextView
                android:id="@+id/from19to22"
                android:text="19 - 22"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@color/lightBlue"
                android:textColor="@color/black"/>

        <CheckedTextView
                android:id="@+id/from23to26"
                android:text="23 - 26"
                android:layout_marginTop="4dp"
                android:background="@color/lightBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/black"/>

        <CheckedTextView
                android:id="@+id/from27to35"
                android:text="27 - 35"
                android:layout_marginTop="4dp"
                android:background="@color/lightBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/black"/>

        <CheckedTextView
                android:id="@+id/over36"
                android:text="36+"
                android:layout_marginTop="4dp"
                android:background="@color/lightBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
            android:text="Looking for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/linearLayout3"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout3"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="8dp"
            android:background="@color/colorAccent"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <CheckedTextView
                android:id="@+id/maleOptionInterlocutor"
                android:text="Male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@color/lightBlue"
                android:textAlignment="center"
                android:gravity="center"
                />

        <CheckedTextView
                android:id="@+id/femaleOptionInterlocutor"
                android:text="Female"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@color/lightBlue"
                android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
            android:text="Age of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="241dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>


    <Button
            android:id="@+id/startChat"
            android:text="Start Chat"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            />

</android.support.constraint.ConstraintLayout>
